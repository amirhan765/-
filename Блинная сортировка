#include <iostream>
using namespace std;

void bubbleSort(int arr[], int n) {
    bool swapped;
    // Внешний цикл — повторяем прохождения, пока не пройдет без обменов
    for (int i = 0; i < n - 1; i++) {
        swapped = false;
        // Внутренний цикл — сравниваем и меняем местами соседние элементы
        for (int j = 0; j < n - i - 1; j++) {
            // Если текущий элемент больше следующего, меняем местами
            if (arr[j] > arr[j + 1]) {
                swap(arr[j], arr[j + 1]);
                swapped = true; // Был хотя бы один обмен
            }
        }
        // Если за проход не было обменов, массив уже отсортирован
        if (!swapped)
            break;
    }
}

int main() {
    int arr[] = {64, 34, 25, 12, 22, 11, 90}; // Исходный массив
    int n = sizeof(arr) / sizeof(arr[0]);

    cout << "Исходный массив:\n";
    for (int i = 0; i < n; i++)
        cout << arr[i] << " ";
    cout << endl;

    // Вызов функции сортировки
    bubbleSort(arr, n);

    cout << "Отсортированный массив:\n";
    for (int i = 0; i < n; i++)
        cout << arr[i] << " ";
    cout << endl;

    return 0;
} 
