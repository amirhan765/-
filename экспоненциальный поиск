#include <iostream>
using namespace std;

// Двоичный поиск в массиве с индексами от left до right
int binarySearch(int arr[], int left, int right, int x) {
    while (left <= right) {
        int mid = left + (right - left) / 2;

        if (arr[mid] == x)
            return mid;
        if (arr[mid] < x)
            left = mid + 1;
        else
            right = mid - 1;
    }
    return -1; // не найден
}

// Экспоненциальный поиск
int exponentialSearch(int arr[], int n, int x) {
    if (n == 0)
        return -1;

    // Проверка первого элемента
    if (arr[0] == x)
        return 0;

    // Определяем диапазон, где может находиться элемент
    int i = 1;
    while (i < n && arr[i] <= x) {
        i *= 2; // увеличиваем индекс в геометрической прогрессии
    }

    // Выполняем двоичный поиск в пределах от i/2 до min(i, n-1)
    return binarySearch(arr, i / 2, min(i, n - 1), x);
}

int main() {
    int arr[] = {1, 3, 5, 7, 9, 13, 15, 19, 23, 27, 31};
    int n = sizeof(arr) / sizeof(arr[0]);
    int x = 15; // искомый элемент

    int index = exponentialSearch(arr, n, x);

    if (index != -1)
        cout << "Элемент " << x << " найден по индексу " << index << endl;
    else
        cout << "Элемент " << x << " не найден" << endl;

    return 0;
}
